from openai import OpenAI
import json


# Load the API key 
with open("config.json", "r") as file:
    config = json.load(file)
    api_key = config["apiKey"]

# Initialize the OpenAI client
client = OpenAI(api_key=config["apiKey"])



# Define the prompt
prompt = """
Using this webpage: https://www.polygon.com/zelda-tears-of-the-kingdom-guide/23707990/riogok-shrine-solution-puzzle-chest
list out the steps to solve the shrine
"""

# Make the API call
response = client.chat.completions.create(
    model="gpt-4",
    messages=[
        {"role": "user", "content": prompt}
    ],
    max_tokens=500,
    temperature=0.7
)

# Print the response
response_data = response.to_dict()  # Convert to a dictionary if necessary
print("Response:")
print(response_data["choices"][0]["message"]["content"])
